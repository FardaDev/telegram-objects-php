# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Exclude vendor from line ending normalization
/vendor/** -text

# PHP files should always use LF
*.php text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Windows files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Exclude from Packagist distribution
/.github export-ignore
/.kiro export-ignore
/tests export-ignore
/vendor_sources export-ignore
/docs/.dev export-ignore
/.editorconfig export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/.php-cs-fixer.dist.php export-ignore
/.php-cs-fixer.cache export-ignore
/phpstan.neon export-ignore
/phpunit.xml export-ignore
/upstream.json export-ignore
