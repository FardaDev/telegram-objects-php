# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# PHP files should always use LF
*.php text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Windows files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
