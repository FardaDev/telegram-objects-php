{
    "name": "fardadev/telegram-objects-php",
    "description": "Framework-agnostic PHP library providing strongly-typed Telegram Bot API DTOs and objects",
    "keywords": [
        "telegram",
        "bot",
        "api",
        "dto",
        "php",
        "framework-agnostic"
    ],
    "homepage": "https://github.com/FardaDev/telegram-objects-php",
    "license": "MIT-C",
    "authors": [
        {
            "name": "Mansour M",
            "email": "mansour@fardadev.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.40",
        "pestphp/pest": "^2.34"
    },
    "autoload": {
        "psr-4": {
            "Telegram\\Objects\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Telegram\\Objects\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "php vendor/bin/php-cs-fixer fix -v",
        "test:lint": "php vendor/bin/php-cs-fixer fix -v --dry-run",
        "test:types": "vendor/bin/phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "vendor/bin/pest tests",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "coverage": "@test:unit --coverage",
        "upstream:check": "python scripts/check-upstream.py --check",
        "upstream:status": "python scripts/check-upstream.py --status",
        "upstream:install": "pip install -r scripts/requirements.txt",
        "upstream:test": "python scripts/run_tests.py"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}